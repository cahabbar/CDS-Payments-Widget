pipeline {
    agent any
    environment {
        AWS_PROFILE = sh(script: 'aws iam list-account-aliases | jq .AccountAliases[0]', returnStdout: true)
    }
    parameters {
        string(name: 'AWS_REGION', defaultValue: 'us-east-1', description: '')
    }
    stages {
        stage('Plan') {
            steps {
                sh "terraform --version"
                sh "./hosting/tf-init.sh"
                sh "./hosting/tf-plan.sh"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}