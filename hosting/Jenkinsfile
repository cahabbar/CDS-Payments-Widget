pipeline {
    agent any
    environment {
        AWS_PROFILE = sh(script: 'aws iam list-account-aliases | jq .AccountAliases[0] | tr -d [\\"\\n]', returnStdout: true)
        APP_ENV = "test"
    }
    parameters {
        choice(choices: 'us-east-1', description: 'What AWS region?', name: 'AWS_DEFAULT_REGION')
    }
    stages {
        stage('Plan') {
            steps {
                dir("hosting") {
                sh "terraform --version"
                sh "./tf-init.sh"
                sh "./tf-plan.sh"
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}